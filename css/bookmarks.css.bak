.bookmarks-container-bouton {
    text-align: right;
    display: inline-block;
    width: 25%;
    vertical-align: top;
    width:150px;
}



.listUrl li span {
    position: relative;
}

.listUrl li a.displayTitle {
    display: inline-block;
    max-width: 85%;
}


/* Item */

.listUrl h3 {
    font-size: 1.1em;
}

.itemLeft {
   bottom: 0;
    padding: 20px;
    position: absolute;
    padding: 0;
}

.itemMain {
    /*background-color: black;*/
    //width: 375px;
    //float: left;
}

.itemMain ul {
    margin-bottom: 5px;
}

.itemMain ul li {
    background-color: transparent;
    display: inline-block;
    padding: 0;
}

.itemMain ul li:nth-child(2n+1), .itemMain ul li:nth-child(2n)  {
    background-color: transparent;

}

.bookmarks-main  .bookmarks-display-simple {
    font-size: 100%;
    font-weight: normal;
    margin-bottom: 0;
}

.bookmarks-main .bookmarks-display-simple a {
    text-decoration: none;
}


.bookmarks-delete-small {
    float: left;
    font-size: x-small;
    height: 12px;
    line-height: 11px;
    text-shadow: none;
    width: 12px;
       margin-top: 5px;
}

.bookmarks-delete-small a {
    text-decoration: none;
    color:white;
}

