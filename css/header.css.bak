/* HEADER */
/* ---- */
header {
    background-color: #35383D;
    margin-bottom: 20px;
    min-height: 45px;
    background: #5a5e63; /* Old browsers */
    background: -moz-radial-gradient(center, ellipse cover,  #5a5e63 0%, #35383d 100%); /* FF3.6+ */
    background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#5a5e63), color-stop(100%,#35383d)); /* Chrome,Safari4+ */
    background: -webkit-radial-gradient(center, ellipse cover,  #5a5e63 0%,#35383d 100%); /* Chrome10+,Safari5.1+ */
    background: -o-radial-gradient(center, ellipse cover,  #5a5e63 0%,#35383d 100%); /* Opera 12+ */
    background: -ms-radial-gradient(center, ellipse cover,  #5a5e63 0%,#35383d 100%); /* IE10+ */
    background: radial-gradient(center, ellipse cover,  #5a5e63 0%,#35383d 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#5a5e63', endColorstr='#35383d',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */
}

header h1{
    color: white;
    display: block;
    font-family: 'Lobster',cursive;
    font-size: 5em;
    margin-top: -10px;
    text-align: center;
    text-shadow: 2px 2px 0 black;
    filter: dropshadow(color=black, offx=2, offy=2);
}


#container header div[class*="grid_"] {
    position: relative;
    background-color: transparent;
    border: medium none transparent;
    margin-bottom: 10px;
    width: 918px;
    box-shadow: 0 0 0 0 transparent inset;
}

#container header div[class*="grid_"]  p {
    text-align: center;
      color: white;
  margin-bottom: 0;
  text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3);
  filter: dropshadow(color=#9E9E9E, offx=1, offy=1);
}

    #container header div[class*="grid_"] p a{
          padding: 10px;
    }

    #container header div[class*="grid_"] a:hover {
        color:#306108
    }


nav {
    border-bottom: 1px solid #E6E6E6;
    border-top: 1px solid #555555;
    background-color: #F2F2F2;
    display: inline-block;
    float: right;
    height: 50px;
    line-height: 50px;
    width: 100%;
}

nav div[class*='container_'] {
    text-align: right;
}

nav li {
    display: inline-block;
    margin-right: 20px;
    padding: 0 5px;
    min-width: 50px;
    text-align: center;
    position: relative;
    min-height: 51px;
    top: 0;
}

    nav li a{
        text-decoration: none;
        color: darkSlateGray;
    }

    nav li:hover {
        background: rgba(255,255,255,0.5);
    }
    
    nav li:last-child {
        margin-right: 0;
    }

    nav li:hover a:hover {
		color:#008ee8;
    }


.nav-actif, .nav-actif:hover{
	background: #E8E8E8;
	text-decoration:none;
        height: 51px;
        border-left: 1px solid #E6E6E6;
        border-right: 1px solid #E6E6E6;
        border-top: 1px solid #FAFAFA;
        border-bottom: transparent;
        color:#008EE8;

}

.nav-actif a {
   color:#008EE8;
}

.headerActif_wrap {
   border: 1px solid white;
   border-bottom: transparent;
   margin-left: -5px;
   margin-right: -5px;
   padding: inherit;

}

.menu_wrap {
    border-bottom: 1px solid white;
    width: inherit;
}

#menu-categories-tab {
    position: relative;
}

#menu-categories-tab ul {
    display:none;
    background-color: #E8E8E8;
    left: 0;
    position: absolute;
    width: 200px;
    border-left: solid 1px white;
    border-right:solid 1px  white;
    border-bottom: solid 1px  white;
    z-index: 99;
}
#menu-categories-tab ul li{
    display: list-item;
    text-align: left;
}

#menu-categories-tab:hover ul {
    display:block;
}